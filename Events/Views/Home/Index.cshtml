@model Events.Models.EventsViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="event-heading">Upcomming Events</h1>
<div class="row">
    @if (Model.UpcomingEvents.Any())
    {
        @Html.DisplayFor( x => x.UpcomingEvents)
    }
    else
    {
        <div class="col-md-4">No events</div>
    }
</div>
<h1 class="event-heading">Past Events</h1>
<div class="row">
    @if (Model.PastEvents.Any())
    {
        @Html.DisplayFor( x => x.PastEvents)
    }
    else
    {
        <div class="col-md-4">No events</div>
    }
</div>